<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@id/lnSound"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_shape"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:id="@id/lnTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@id/txtTitleImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:padding="@dimen/margin_16"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/background"/>

        <View
            android:layout_width="@dimen/margin_1"
            android:layout_height="@dimen/margin_8"/>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_170">

        <ImageView
            android:id="@id/imgQuestionPlaySound"
            android:layout_width="@dimen/margin_70"
            android:layout_height="@dimen/margin_70"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_play_circle"
            app:tint="@color/color_blue_sound" />

        <ImageView
            android:id="@id/imgQuestionPauseSound"
            android:layout_width="@dimen/margin_70"
            android:layout_height="@dimen/margin_70"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_pause_circle"
            app:tint="@color/color_blue_sound" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ProgressBar
        android:id="@id/progressPeriodSoundTime"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_6"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_1"
        android:progressDrawable="@drawable/green_progress_drawable" />

</LinearLayout>
