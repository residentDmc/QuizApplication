<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@id/lnSound"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_170"
    android:background="@drawable/rounded_white_shape"
    android:orientation="vertical"
    android:visibility="gone">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@id/imgQuestionPlaySound"
            android:layout_width="@dimen/margin_70"
            android:layout_height="@dimen/margin_70"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_play_circle"
            app:tint="@color/color_blue_sound" />

        <ImageView
            android:id="@id/imgQuestionPauseSound"
            android:layout_width="@dimen/margin_70"
            android:layout_height="@dimen/margin_70"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_pause_circle"
            app:tint="@color/color_blue_sound" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
